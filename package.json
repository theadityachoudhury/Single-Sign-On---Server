{
  "name": "identity_service",
  "version": "0.0.1",
  "description": "Identity service for HeapMind SSO Auth",
  "main": "server.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 10",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint:check && npm run format:check && npm run type-check",
    "fix": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit",
    "docker:dev": "docker compose up -d",
    "docker:dev:down": "docker compose down",
    "docker:dev:logs": "docker compose logs -f identity-service",
    "docker:dev:build": "docker compose build",
    "docker:dev:rebuild": "docker compose down && docker compose build --no-cache && docker compose up -d",
    "docker:dev:shell": "docker compose exec identity-service sh",
    "docker:prod": "docker compose -f docker compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker compose.prod.yml logs -f identity-service",
    "docker:prod:build": "docker compose -f docker compose.prod.yml build",
    "docker:clean": "docker compose down -v && docker system prune -f"
  },
  "author": "Aditya Choudhury",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "consola": "^3.4.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.1",
    "pg": "8.16.3",
    "uuid": "11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.4",
    "@types/pg": "8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "16.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  }
}
